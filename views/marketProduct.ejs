<%-include("Partials/header")%>
    <div class="container">
        <!--Main layout-->
        <main class="mt-5 pt-4">
            <div class="container dark-grey-text mt-5">

                <!--Grid row-->
                <div class="row wow fadeIn">

                    <!--Grid column-->
                    <div class="col-md-6 mb-4">

                        <img class="itemImage" src="/<%= item.images.image1%>" class="img-fluid" alt="">

                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6 mb-4">

                        <!--Content-->
                        <div class="p-4">

                            <div class="mb-3">
                                <a href="">
                                    <span class="badge purple mr-1"><%=item.category%></span>
                                </a>
                                <a href="">
                                    <span class="badge blue mr-1">New</span>
                                </a>
                                <a href="">
                                    <span class="badge red mr-1">Bestseller</span>
                                </a>
                            </div>

                            <p class="lead font-weight-bold">
                                <%=item.name%>
                            </p>

                            <p class="lead">
                                <span><%=item.points%></span>
                            </p>

                            <p class="lead font-weight-bold">Description</p>

                            <p>
                                <%=item.desc%>
                            </p>

                            <div class="d-flex justify-content-left">
                                <form action="/download/<%=item._id%>" method="GET" class="mr-2">
                                    <button class="btn btn-primary btn-md my-0 p" type="submit">Download</button>
                                </form>
                                <%if(item.author.id.equals(currentUser._id)){%>
                                    <form action="/market/<%=item._id%>?_method=DELETE" method="POST" class="mr-2">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                    <a href="/market/<%=item._id%>/edit"><button class="btn btn-warning">Edit</button></a>
                                    <%}%>
                            </div>

                        </div>
                        <!--Content-->

                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

                <hr>

                <!--Grid row-->
                <div class="row d-flex justify-content-center wow fadeIn">

                    <!--Grid column-->
                    <div class="col-md-6 text-center">

                        <h4 class="my-4 h4">Additional information</h4>

                        <p>
                            <%=item.addesc%>
                        </p>

                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row wow fadeIn">

                    <!--Grid column-->
                    <div class="col-lg-4 col-md-12 mb-4">

                        <img src="/<%=item.images.image2%>" class="img-fluid" alt="">

                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-lg-4 col-md-6 mb-4">

                        <img src="/<%=item.images.image3%>" class="img-fluid" alt="">

                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-lg-4 col-md-6 mb-4">

                        <img src="/<%=item.images.image4%>" class="img-fluid" alt="">

                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

            </div>
        </main>
        <!--Main layout-->

    </div>
    <%- include("Partials/footer")%>