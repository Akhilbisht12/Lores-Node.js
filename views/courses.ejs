<%- include("Partials/header") %>
    <!-- main container to hold complete template -->
    <div class="container my-4 ">
        <div class="headContainer">
            <div class="imgContainer  d-flex justify-content-center">
                <img class="w-100" src="/img/courseHead.png" alt="">
            </div>
            <!-- welcome BAck container -->
            <div class="continueContainer my-4">
                <div>
                    <strong>
                        Welcome Back <%= currentUser.username%>!!
                    </strong>
                </div>
                <div>
                    Continue Your courses...
                </div>
                <!-- continue courses show -->
                <div class="continueshow my-4">
                    <div class="d-flex justify-content-center">
                        <div class="card mx-2" style="max-width: 540px;">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <img class="w-100 h-100" src="https://cdn.pixabay.com/photo/2020/02/26/08/05/athens-4881001__340.jpg" class="card-img" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">Card title</h5>
                                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mx-2" style="max-width: 540px;">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <img class="w-100 h-100" src="https://cdn.pixabay.com/photo/2020/02/26/08/05/athens-4881001__340.jpg" class="card-img" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">Card title</h5>
                                        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="coursesContainer my-5">
            <div class="firstSection my-5">
                <div class="textContainer">
                    <h3>Javascript Course For You</h3>
                </div>
                <div class="courseCardSection">
                    <div class="container">
                        <div class="card-deck">
                            <% for(var i=0; i<5; i++){ %>
                                <div class="card mb-4">
                                    <iframe width="200" height="150" src="https://www.youtube.com/embed/videoseries?list=PLL0cLF8gjBpqHndezz_A7DmrYz_M0LNjd" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="secondSection my-5">
                <div class="textContainer">
                    <h3>Designing Course</h3>
                </div>
                <div class="courseCardSection">
                    <div class="container">
                        <div class="card-deck">
                            <% for(var i=0; i<5; i++){ %>
                                <div class="card mb-4">
                                    <img class="card-img-top img-fluid" src="https://cdn.pixabay.com/photo/2020/05/20/06/47/mountain-5195052__340.jpg" alt="Card image cap">
                                    <div class="card-body">
                                        <h5 class="card-title">Design Course</h5>
                                        <p class="card-text">Deepak Semwal</p>
                                        <div class="rating">
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                            <span>4.7</span>
                                            <span>(17200)</span>
                                        </div>
                                        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
    <%- include("Partials/footer") %>